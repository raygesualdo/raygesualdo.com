<div
  class="bg-slate-900 flex flex-col text-white font-display items-stretch gap-[3vw] bg-cover relative overflow-hidden"
>
  <img class="absolute inset-0 object-cover left-[30vw]" src="{{ heroImage }}" />
  <div
    class="absolute bottom-0 w-full flex justify-end h-[10vh] items-end px-[2vw] bg-slate-100 gap-[2vw]"
  >
    <h4 class="text-[6.5vh] text-slate-800 self-center">@raygesualdo</h4>
    <div>
      <img
        src="https://pbs.twimg.com/profile_images/550139150066651136/II7xw5O__400x400.jpeg"
        class="rounded-t w-[16vw] shadow-lg"
      />
    </div>
  </div>
  <div class="w-2/3 bg-slate-900 absolute top-[-10%] left-[-15%] h-[200%] rotate-[-20deg]"></div>
  <div class="pl-[8vw] flex-1 w-[60vw]">
    <h1
      id="title"
      class="h-full leading-[1.2] flex items-center drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)]"
    >
      {{ title }}
    </h1>
  </div>
</div>
