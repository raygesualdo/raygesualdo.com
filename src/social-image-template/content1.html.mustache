<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/textfit@2.4.0/textFit.js"></script>

<div
  class="bg-slate-800 flex flex-col text-white font-display items-stretch gap-[3vw]"
  style="
    background-image: url('https://www.transparenttextures.com/patterns/axiom-pattern.png');
    background-image: url('https://www.transparenttextures.com/patterns/3px-tile.png');
  "
>
  <div class="px-[6vw] flex-1 pt-[3vw]">
    <h1 id="title" class="h-full leading-[1.2] flex items-center">
      {{ title }}
    </h1>
  </div>
  <div
    class="flex justify-between items-center mt-[3vw] mb-[6vw] px-[6vw] bg-slate-200"
  >
    <div class="-my-[3vw]">
      <img
        src="https://pbs.twimg.com/profile_images/550139150066651136/II7xw5O__400x400.jpeg"
        class="rounded w-[16vw] shadow-lg"
      />
    </div>
    <h4 class="text-[7vh] text-slate-800">@raygesualdo</h4>
  </div>
</div>

<script>
  window.onload = function () {
    textFit(document.getElementById('title'), {
      maxFontSize: 140,
      multiLine: true,
    })
  }
</script>
