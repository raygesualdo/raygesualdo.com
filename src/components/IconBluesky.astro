import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'svg'>
---

<style is:global>
  .bluesky-flutter {
    display: inline-flex;
    gap: 0.5em;
    align-items: center;
    transition: 200ms;
  }

  .bluesky-flutter .left {
    transform-origin: center;
  }
  .bluesky-flutter .right {
    transform-origin: center;
    transform: scale(-1, 1);
  }
  a:has(.bluesky-flutter):hover .left,
  a:has(.bluesky-flutter):focus .left {
    animation: flutter 430ms ease-in-out;
    --flip: 1;
  }
  a:has(.bluesky-flutter):hover .right,
  a:has(.bluesky-flutter):focus .right {
    animation: flutter 500ms ease-in-out;
    --flip: -1;
  }
  a:has(.bluesky-flutter):hover svg,
  a:has(.bluesky-flutter):focus svg {
    transform: rotate(-5deg);
    transition: 500ms;
  }

  @media (prefers-reduced-motion) {
    a:has(.bluesky-flutter):hover .left,
    a:has(.bluesky-flutter):focus .left,
    a:has(.bluesky-flutter):hover .right,
    a:has(.bluesky-flutter):focus .right {
      animation: none;
    }
  }

  @keyframes flutter {
    10% {
      transform: scale(calc(var(--flip) * 1), 0.9);
    }
    20% {
      transform: scale(calc(var(--flip) * 0.5), 1);
    }
    40% {
      transform: scale(calc(var(--flip) * 0.9), 0.95);
    }
    60% {
      transform: scale(calc(var(--flip) * 0.3), 1);
    }
    80% {
      transform: scale(calc(var(--flip) * 0.9), 0.95);
    }
    100% {
      transform: scale(calc(var(--flip) * 1), 1);
    }
  }
</style>

